{
  "extends": "../../tsconfig.base",
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "jsx": "react-native",
    "lib": ["es2017", "DOM"],
    "noEmit": true,
    "target": "esnext",
    "incremental": true,
    "strict": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "babel.config.cjs", "metro.config.cjs", "**/*.js"]
}
