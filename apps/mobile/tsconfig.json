{
  "extends": "../../packages/tsconfig-config/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "lib": ["es2022", "DOM"],
    "module": "es2022",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "checkJs": false,
    "noEmit": true,
    "incremental": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "references": [
    {
      "path": "../../packages/ui/tsconfig.native.json"
    }
  ],
  "include": ["**/*.ts", "**/*.tsx", ".detoxrc.cjs"],
  "exclude": ["node_modules", "babel.config.cjs", "metro.config.cjs", "**/*.js", "./dist"]
}
