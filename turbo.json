{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "build:watch": {},
    "format": {},
    "lint": {
      "inputs": ["src/**"],
      "outputs": [],
      "outputMode": "new-only"
    },
    "lint:fix": {
      "outputs": []
    },
    "typecheck": {},
    "check:all": {
      "dependsOn": ["build", "lint", "format", "typecheck"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
