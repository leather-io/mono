{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": [
        "dist/**",
        "dist-*/**"
      ],
      "dependsOn": [
        "^build"
      ]
    },
    "build:watch": {},
    "format": {},
    "format:check": {},
    "lint": {
      "inputs": [
        "src/**"
      ],
      "outputs": [],
      "outputLogs": "new-only"
    },
    "lint:fix": {
      "outputs": []
    },
    "typecheck": {},
    "check:all": {
      "dependsOn": [
        "build",
        "lint",
        "format",
        "typecheck"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}