{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": [
        "packages/*/dist/**",
        "packages/*/dist-*/**",
        "apps/web/build/**",
        "apps/mobile/{ios,android,build}/**"
      ],
      "dependsOn": ["^build"]
    },
    "build:watch": {},
    "format": {},
    "format:check": {},
    "typecheck": {},
    "check:all": {
      "dependsOn": ["build", "format", "typecheck"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
