{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"]
    },
    "build:watch": {},
    "format": {
      "dependsOn": ["build"]
    },
    "lint": {
      "dependsOn": ["build"]
    },
    "lint:fix": {
      "dependsOn": ["build"]
    },
    "typecheck": {
      "dependsOn": ["build"]
    },
    "check:all": {
      "dependsOn": ["build", "lint", "format", "typecheck"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
