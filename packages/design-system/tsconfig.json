{
  "extends": "../../packages/tsconfig-config/tsconfig.base",
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "jsx": "react-native",
    "lib": ["es2017", "DOM"],
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "noEmit": true,
    "target": "esnext",
    "incremental": true,
    "strict": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "**/*.js"]
}
