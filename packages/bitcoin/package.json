{
  "name": "@leather-wallet/bitcoin",
  "author": "Leather.io contact@leather.io",
  "description": "Shared bitcoin utilities",
  "version": "0.6.6",
  "license": "MIT",
  "homepage": "https://github.com/leather-wallet/mono/tree/dev/packages/bitcoin",
  "repository": {
    "type": "git",
    "url": "git@github.com:leather-wallet/mono.git",
    "directory": "packages/bitcoin"
  },
  "type": "module",
  "scripts": {
    "build": "tsup",
    "build:watch": "tsup --watch",
    "format": "prettier . --write --ignore-path ../../.prettierignore",
    "lint": "eslint . --fix --ignore-path ../../.eslintignore",
    "lint:fix": "eslint . --fix --ignore-path ../../.eslintignore",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run",
    "typecheck": "tsc --noEmit -p ./tsconfig.json"
  },
  "exports": {
    ".": "./dist/index.js"
  },
  "bugs": "https://github.com/leather-wallet/mono/issues",
  "dependencies": {
    "@bitcoinerlab/secp256k1": "1.0.2",
    "@leather-wallet/constants": "workspace:*",
    "@leather-wallet/crypto": "workspace:*",
    "@leather-wallet/models": "workspace:*",
    "@leather-wallet/utils": "workspace:*",
    "@noble/hashes": "1.4.0",
    "@noble/secp256k1": "2.1.0",
    "@scure/base": "1.1.6",
    "@scure/bip32": "1.4.0",
    "@scure/bip39": "1.3.0",
    "@scure/btc-signer": "1.3.2",
    "@stacks/common": "6.8.1",
    "@stacks/transactions": "6.9.0",
    "bip32": "4.0.0",
    "bitcoinjs-lib": "6.1.3",
    "ecpair": "2.1.0",
    "varuint-bitcoin": "1.1.2"
  },
  "devDependencies": {
    "@leather-wallet/eslint-config": "workspace:*",
    "@leather-wallet/prettier-config": "workspace:*",
    "@leather-wallet/rpc": "workspace:*",
    "@leather-wallet/tsconfig-config": "workspace:*",
    "@vitest/coverage-istanbul": "0.34.6",
    "eslint": "8.53.0",
    "prettier": "3.2.5",
    "tslib": "2.6.2",
    "tsup": "8.1.0",
    "typescript": "5.3.3",
    "vitest": "0.34.6"
  },
  "keywords": [
    "bitcoin",
    "leather",
    "leather wallet"
  ],
  "prettier": "@leather-wallet/prettier-config",
  "publishConfig": {
    "access": "public"
  }
