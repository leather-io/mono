{
  "name": "@leather-wallet/utils",
  "description": "Shared bitcoin utilities",
  "version": "0.5.0",
  "license": "MIT",
  "type": "module",
  "author": "Leather.io contact@leather.io",
  "scripts": {
    "format": "prettier . --write --ignore-path ../../.prettierignore",
    "lint": "eslint . --ignore-path ../../.eslintignore",
    "lint:fix": "eslint . --fix --ignore-path ../../.eslintignore",
    "test:coverage": "vitest run --coverage",
    "test:unit": "vitest run",
    "ts:build": "tsc --build",
    "ts:build:watch": "tsc --build --watch --preserveWatchOutput",
    "typecheck": "tsc --noEmit -p ./tsconfig.json"
  },
  "homepage": "https://github.com/leather-wallet/mono/tree/dev/packages/utils",
  "repository": {
    "type": "git",
    "url": "git@github.com:leather-wallet/mono.git",
    "directory": "packages/utils"
  },
  "bugs": "https://github.com/leather-wallet/mono/issues",
  "dependencies": {
    "@leather-wallet/constants": "workspace:*",
    "@leather-wallet/models": "workspace:*",
    "@leather-wallet/rpc": "workspace:*",
    "bignumber.js": "9.1.2"
  },
  "devDependencies": {
    "@leather-wallet/eslint-config": "workspace:*",
    "@leather-wallet/prettier-config": "workspace:*",
    "@leather-wallet/tsconfig-config": "workspace:*",
    "@vitest/coverage-istanbul": "0.34.6",
    "eslint": "8.53.0",
    "jsdom": "22.1.0",
    "prettier": "3.2.5",
    "typescript": "5.3.3",
    "vitest": "0.34.6"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "keywords": [
    "leather",
    "leather wallet",
    "utils"
  ],
  "prettier": "@leather-wallet/prettier-config",
  "publishConfig": {
    "access": "public"
  }
}
