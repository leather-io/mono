{
  "extends": "../tsconfig-config/tsconfig.base",
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "checkJs": false,
    "jsx": "react-jsx",
    "lib": ["es2017", "DOM"],
    "incremental": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist-web"
  },
  "include": ["**/*.web.ts", "**/*.web.tsx", "web.ts", "**/theme-web/**/*"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "**/*.js", "./dist-*"]
}
