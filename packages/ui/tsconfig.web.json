{
  "extends": "../tsconfig-config/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist-web",
    "paths": {
      "leather-styles/*": ["leather-styles/*"]
    }
  },
  "include": [
    "**/*.web.ts",
    "**/*.web.tsx",
    "*.web.ts",
    "**/*web.stories.tsx",
    "src/.storybook-*/*",
    "src/icons/*",
    "src/types/*"
  ],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "**/*.js", "./dist-*"]
}
