{
  "extends": ["@leather.io/tsconfig-config/tsconfig.base.json"],
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "jsx": "react-native",
    "lib": ["esnext", "DOM"],
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist-all",
    "paths": {
      "leather-styles/*": ["leather-styles/*"]
    }
  },
  "include": ["**/*", "src/.storybook-*/*", "src/types/global.d.ts", "leather-styles"],
  "exclude": ["node_modules", "babel.config.cjs", "metro.config.cjs", "**/*.js", "./dist-*"]
}
