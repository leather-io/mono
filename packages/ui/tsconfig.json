{
  "extends": "../../packages/tsconfig-config/tsconfig.base",
  "compilerOptions": {
    "module": "es2022",
    "moduleResolution": "Bundler",
    "allowJs": false,
    "checkJs": false,
    "jsx": "react-native",
    "lib": ["es2017", "DOM"],
    "incremental": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["**/*", "src/.storybook-*/*"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "**/*.js", "./dist"]
}
