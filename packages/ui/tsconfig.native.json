{
  "extends": "../tsconfig-config/tsconfig.base",
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "tsconfig.native.tsbuildinfo",
    "jsx": "react-native",
    "jsxImportSource": "react",
    "lib": ["ESNext", "DOM"],
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist-native"
  },
  "include": [
    "**/*.native.ts",
    "**/*.native.tsx",
    "native.ts",
    "**/theme-native/**/*",
    "**/*.shared.tsx",
    "global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "babel.config.cjs",
    "metro.config.cjs",
    "tsup.config.*.ts",
    "**/*.js",
    "./dist-*"
  ]
}
