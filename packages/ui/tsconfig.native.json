{
  "extends": ["@leather.io/tsconfig-config/tsconfig.base.json"],
  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "jsx": "react-native",
    "lib": ["es2017", "DOM"],
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "./dist-native"
  },
  "include": [
    "**/*.native.ts",
    "**/*.native.tsx",
    "native.ts",
    "**/theme-native/**/*",
    "src/icons/native/*",
    "index.d.ts"
  ],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "**/*.js", "./dist-*"]
}
